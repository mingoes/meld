{
  "name": "git-meld",
  "version": "0.4.0",
  "description": "CLI tool to generate meaningful commit messages using AI",
  "main": "dist/index.js",
  "bin": {
    "meld": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "NODE_NO_WARNINGS=1 node dist/index.js",
    "dev": "NODE_NO_WARNINGS=1 tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "openrouter",
    "cli",
    "git-commit",
    "commit-message",
    "artificial-intelligence"
  ],
  "author": {
    "name": "Mingoes Kukupessy",
    "url": "https://github.com/mingoes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mingoes/meld.git"
  },
  "bugs": {
    "url": "https://github.com/mingoes/meld/issues"
  },
  "homepage": "https://github.com/mingoes/meld#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "dotenv": "^16.4.7",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "conf": "^13.1.0",
    "keytar": "^7.9.0"
  }
}
